<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>IronOcean</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <a href="http://lvh.me:3000/">Iron Ocean</a>
  <a href="http://blog.lvh.me:3000/">Blogs</a>
  <a href="http://admin.lvh.me:3000/">Admin</a>

  <% if current_user %>
  <%= link_to "Log Out", session_path("current"), method: "delete" %>
  <% else %>
  <%= link_to "Login", new_session_path %>
  <% end %>


  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>

  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p>Some text in the modal.</p>

          <h1>New Session</h1>

          <%= form_for(:user, url: login_path) do |f| %>
            <div>
              email
                <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div>
              password
                <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div>
              <%= f.submit "log in", class: "btn btn-primary"  %>
            </div>
          <% end %>



        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>





  <%= yield %>
</body>
</html>
